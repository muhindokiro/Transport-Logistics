<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <template id="ooh_invoice_without_etr">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <data>
                                <div class="header">
                                    <div class="row">
                                        <div class="first-page col-7"
                                            style="background-color:#00004c; padding: 40px; font-size: 30px;">
                                            <span style="color:#FFFFFF">
                                                <strong>INVOICE</strong>

                                            </span>
                                        </div>
                                        <div class="col-5" style='margin-left: 100px;'>
                                            <img class="img-fluid"
                                                t-attf-src="data:image/*;base64,{{doc.company_id.logo}}"
                                                style="max-height: 150px;" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="font-size: 18px; margin-top: 25px;">
                                    <div class="col-6">
                                        <span>Customer Details</span>
                                        <br />
                                        <span>
                                            <strong>Company Name:</strong>
                                        </span>
                                        <span
                                            t-field="doc.partner_id.display_name" />
                                        <br />
                                        <span>
                                            <strong>Address:</strong>
                                        </span>
                                        <span
                                            t-field="doc.partner_id.street" />, <span
                                            t-field="doc.partner_id.city" />, <span
                                            t-field="doc.partner_id.country_id.name" />
                                        <br />
                                        <span>
                                            <strong>Tell Number:</strong>
                                        </span>
                                        <span
                                            t-field="doc.partner_id.mobile" />
                                        <br />
                                        <span>
                                            <strong>Email Address:</strong>
                                        </span>
                                        <span
                                            t-field="doc.partner_id.email" />
                                        <br />
                                        <span>
                                            <strong>Customer PIN:</strong>
                                        </span>
                                        <span
                                            t-field="doc.partner_id.vat" />
                                    </div>
                                    <div class="col-6" style="margin-left: 100px">
                                        <span>
                                            <strong>Date:</strong>
                                        </span>
                                        <span t-field="doc.invoice_date" />
                                        <br />
                                        <span>
                                            <strong>PIN No:</strong>
                                        </span>
                                        <span t-field="res_company.vat" />
                                        <br />
                                        <span>
                                            <strong>Invoice No:</strong>
                                        </span>
                                        <span t-field="doc.display_name" />
                                        <br />
                                        <span>
                                            <strong>Contact Person:</strong>
                                        </span>
                                        <span t-field="doc.x_studio_atlancis_contact" />
                                        <br />
                                        <span>
                                            <strong>Phone No:</strong>
                                        </span>
                                        <span t-field="doc.x_studio_contact_phone_no" />
                                        <br />
                                        <!-- <span>
                                            <strong>Your Reference:</strong>
                                        </span>
                                        <span t-field="doc.ref" />
                                        <br />
                                        <span>
                                            <strong>Due Date:</strong>
                                        </span>
                                        <span t-field="doc.invoice_date_due" />
                                        <br /> -->
                                    </div>
                                </div>
                                <table class="table o_report_block_table table-bordered"
                                    style="margin-top:15px; border: 2px solid #000000 !important;">
                                    <thead>
                                        <tr style="background-color:#00004c;">
                                            <!-- TODO: remove in master -->
                                            <t t-set="colspan" t-value="6" />
                                            <th>
                                                <span style="color:#FFFFFF">Product</span>
                                            </th>
                                            <th>
                                                <span style="color:#FFFFFF">CSI No</span>
                                            </th>
                                            <th>
                                                <span style="color:#FFFFFF">Quantity</span>
                                            </th>
                                            <th>
                                                <span style="color:#FFFFFF">Serial No</span>
                                            </th>
                                            <th
                                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span style="color:#FFFFFF">Unit Price</span>
                                            </th>
                                            <th t-if="display_discount"
                                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span style="color:#FFFFFF">Disc.(%)</span>
                                                <!-- TODO: remove in master -->
                                                <t t-set="colspan" t-value="colspan+1" />
                                            </th>
                                            <th
                                                t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span style="color:#FFFFFF">Taxes</span>
                                            </th>
                                            <th class="text-right">
                                                <span
                                                    groups="account.group_show_line_subtotals_tax_excluded"
                                                    style="color:#FFFFFF">Amount</span>
                                                <span
                                                    groups="account.group_show_line_subtotals_tax_included"
                                                    style="color:#FFFFFF">Total Price</span>
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody class="invoice_tbody">
                                        <t t-foreach="doc.invoice_line_ids" t-as="line">
                                            <tr
                                                t-att-class="'bg-200 font-weight-bold doc_line_section' if line.display_type == 'line_section' else 'font-italic doc_line_note' if line.display_type == 'line_note' else ''">
                                                <td name="account_invoice_line_name"
                                                    style="border: 2px solid #000000;">
                                                    <span t-field="line.product_id.name" />
                                                </td>
                                                <td
                                                    name="x_studio_csi_number"
                                                    style="border: 2px solid #000000;">
                                                    <span t-field="line.x_studio_csi_number" />
                                                </td>
                                                <td
                                                    name="account_invoice_line_name"
                                                    style="border: 2px solid #000000;">
                                                    <span t-field="line.quantity" />
                                                    <span t-field="line.product_uom_id"
                                                    />
                                                </td>
                                                <td style="border: 2px solid #000000;">
                                                    <span t-field="line.x_studio_serial_number" />
                                                </td>
                                                <td
                                                    t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                    style="border: 2px solid #000000;">
                                                    <span t-field="line.price_unit" />
                                                </td>
                                                <td t-if="display_discount"
                                                    t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                    style="border: 2px solid #000000;">
                                                    <span t-field="line.discount" />
                                                </td>
                                                <td
                                                    t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                    style="border: 2px solid #000000;">
                                                    <span
                                                        t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" />
                                                </td>
                                                <td class="text-right doc_price_total"
                                                    style="border: 2px solid #000000;">
                                                    <span t-field="line.price_total" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                                <div class="row">
                                    <div class="col-5" />
                                    <div class="col-5 offset-2">
                                        <table
                                            class="table table-sm o_report_block_total table-bordered"
                                            style="border: 2px solid #000000 !important;">
                                            <tr class="border-black o_subtotal">
                                                <td style="border: 2px solid #000000;">
                                                    <strong>SUB TOTAL</strong>
                                                </td>
                                                <td class="text-right"
                                                    style="border: 2px solid #000000;">
                                                    <span t-field="doc.amount_untaxed"
                                                        t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
                                                </td>
                                            </tr>
                                            <tr class="border-black o_subtotal">
                                                <td style="border: 2px solid #000000;">
                                                    <strong>Taxes on <span
                                                            t-field="doc.amount_untaxed" /></strong>
                                                </td>
                                                <td class="text-right"
                                                    style="border: 2px solid #000000;">
                                                    <span t-field="doc.amount_tax"
                                                        t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
                                                </td>
                                            </tr>
                                            <tr class="border-black o_subtotal">
                                                <td style="border: 2px solid #000000;">
                                                    <strong>GRAND TOTAL</strong>
                                                </td>
                                                <td class="text-right"
                                                    style="border: 2px solid #000000;">
                                                    <span t-field="doc.amount_total"
                                                        t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}" />
                                                </td>
                                            </tr>
                                        </table>
                                    </div>

                                </div>
                                <div class="row">
                                    <!-- <p t-if="doc.comment" name="comment">
                                        <span t-field="doc.comment" />
                                    </p> -->
                                    <p t-if="doc.invoice_payment_term_id"
                                        name="invoice_payment_term_id">
                                        <span t-field="doc.invoice_payment_term_id.note" />
                                    </p>
                                </div>
                                <div class="row" style="margin-top:55px;">
                                    <div class="col-6">
                                        <span style="color:#00004c">
                                            <strong>Approved by:</strong>
                                        </span>
                                        <span>
                                            <strong>Daniel Njuguna</strong>
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span>
                                            <img class="img-fluid"
                                                src="/web/image/12027/Dan's%20Signature.png?access_token=9e1c3791-2c06-4f25-b5db-58f6a39c1e10" />
                                        </span>
                                    </div>
                                </div>

                                <div class="row" style="margin-top:55px; font-size: 18px;">
                                    <div class="col-6">
                                        <span style="color:#00004c">
                                            <strong>Remit To:</strong>
                                        </span>
                                        <br />
                                        <span>
                                            <strong>Account Name:</strong>
                                        </span>
                                        <span t-field="res_company.display_name" />
                                        <br />
                                        <span>
                                            <strong>Country:</strong>
                                        </span>
                                        <span t-field="res_company.country_id.name" />
                                        <br />
                                        <span>
                                            <strong>Bank Name:</strong>
                                        </span>
                                        <span t-field="doc.x_studio_bank_name.display_name" />
                                        <br />
                                        <span>
                                            <strong>Branch Name:</strong>
                                        </span>
                                        <span t-field="doc.x_studio_branch_name" />
                                        <br />
                                        <span>
                                            <strong>A/C Number:</strong>
                                        </span>
                                        <span t-field="doc.partner_bank_id.acc_number" />
                                    </div>
                                    <div class="col-6">
                                        <span>
                                            <strong>Currency:</strong>
                                        </span>
                                        <span t-field="doc.currency_id.name" />
                                        <br />
                                        <span>
                                            <strong>Bank Code:</strong>
                                        </span>
                                        <span t-field="doc.x_studio_bank_code" />
                                        <br />
                                        <span>
                                            <strong>Branch Code:</strong>
                                        </span>
                                        <span t-field="doc.x_studio_branch_code" />
                                        <br />
                                        <span>
                                            <strong>Swift Code:</strong>
                                        </span>
                                        <span t-field="doc.x_studio_swift_code" />
                                    </div>
                                </div>
                                <div class="footer">
                                    <hr />
                                    <center class="row ">
                                        <tr>
                                            <b>
                                                <t t-esc="doc.company_id.name" /> | <t
                                                    t-esc="doc.company_id.street" /> | <t
                                                    t-esc="doc.company_id.street2" />, <t
                                                    t-esc="doc.company_id.city" />, <t
                                                    t-esc="doc.company_id.state_id.name" />, <t
                                                    t-esc="doc.company_id.phone" /> | <t
                                                    t-esc="doc.company_id.email" /> | <t
                                                    t-esc="doc.company_id.website" />
                                            </b>
                                        </tr>
                    <br />

                    <span
                                            class="page" /> / <span
                                            class="topage" />
                                    </center>
                                </div>
                            </data>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>