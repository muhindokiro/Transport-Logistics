<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="open_file_kanban_view" model="ir.ui.view">
        <field name="name">open.file.kanban</field>
        <field name="model">open.file</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="id" />
                <field name="name" />
                <field name="customer_id" />
                <field name="date" />
                <field name="state" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Avatar"
                                    t-att-src="kanban_image('../static/src/container.jpg', 'image_medium')" />
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name" />
                                </strong>
                                <div t-if="record.customer_id.value">
                                    <t t-esc="record.customer_id.value" />
                                </div>
                                <div t-if="record.date.value">
                                    <t t-esc="record.date.value" />
                                </div>
                                <div t-if="record.state.value">
                                        <t t-esc="record.state.value"/>
                                </div>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_open_file_form" model="ir.ui.view">
        <field name="name">open.file.form</field>
        <field name="model">open.file</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,cancel,invoiced" />
            <button name="create_invoice" string="Create Invoice" states="draft" class="btn-primary" type="object" />

                </header>
                                    <sheet>
             <div class="row">
                     <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_associated_invoice" icon="fa-credit-card" width="135" height="50">
                        <field string="INVOICE" name="invoice_count" widget="statinfo"/>
                    </button>
                </div>
                    <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_associated_trips" icon="fa-truck" width="135" height="50">
                        <span>TRIP</span>
                    </button>
                </div>
             </div>
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="customer_id" />
                            <field name="dep_date" />
                            <field name="arr_date" />
                            <field name="date" />
                            <field name="country_id" />
                        </group>
                        <group>
                            <field name="bill_ref" />
                            <field name="inv_ref" />
                            <field name="journal_id" />
                            <field name="company_id" />
                            <field name="return_date" />
                        </group>
                    </group>
                    <notebook>
                        <page string="File Lines">
                            <field name="file_lines">
                                <tree string="File Lines" editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="account_id"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Related Documents">
                            <field name="rela_docs">
                               <tree string="Related Documents" editable="bottom">
                                <field name="date"/>
                                <field name="name"/>
                                <field name="document"/>
                               </tree>
                            </field>
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer oe_right" colspan="2" name="account_total">
                    <field name="account_total" widget='monetary'/>
                    </group>
                    <div class="oe_clear"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>
</odoo>