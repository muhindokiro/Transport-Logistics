<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_container_details_tree" model="ir.ui.view">
            <field name="name">container.details.tree</field>
            <field name="model">container.details</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Container Details">
                    <field name="name" />
                    <field name="shipping_line" />
                    <field name="container_size" />
                    <field name="date_in" />

                </tree>
            </field>
        </record>

        <record id="view_container_details_form" model="ir.ui.view">
            <field name="name">container.details.form</field>
            <field name="model">container.details</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Container Details">

                    <sheet>

                        <group>
                            <group>
                                <field name="name" />
                                <field name="shipping_line" />

                            </group>

                            <group>
                                <field name="container_size" />
                                <field name="date_in" />
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>


    </data>
</odoo>